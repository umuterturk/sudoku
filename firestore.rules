rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Game rooms - simplified rules for development
    match /gameRooms/{roomId} {
      // Allow all operations for game functionality
      allow read, write: if true;
    }
    
    // Game content (boards and solutions) - read-only after creation
    match /gameContent/{roomId} {
      // Allow reading game content for joining players
      allow read: if true;
      
      // Only allow creation of new game content
      // Updates are restricted to prevent cheating
      allow create: if true;
      allow update, delete: if false;
    }
    
    // Deny all other document access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}